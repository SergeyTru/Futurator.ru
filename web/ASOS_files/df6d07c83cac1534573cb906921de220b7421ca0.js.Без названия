if(Navigation.RecognizedUser && (Navigation.CountryIso == "FR" || Navigation.CountryCode == "FR") && bt_cookie("bt_recUser") == ""){
    var date = new Date();
    date.setTime(date.getTime()+(3000*24*60*60*1000));
    document.cookie = "bt_recUser="+(Navigation.RecognizedUser == "1" ? "1" : "0")+"; expires="+date+"; path=/; domain="+location.hostname.replace(/[a-z]+./,".")+";";
}