var mboxCurrent = mboxFactories.get('default').get('mBox-Release-SiteWide',0);mboxCurrent.setOffer(new mboxOfferAjax(''));mboxCurrent.getOffer().setOnLoad(function() {
if(window.$){


    /************
        Listens for: 
        save for later from category page and product page
        save for later on search page  
        save for later from quickview on category page 
        save for later from quickview on search 
        save for later from complete the look on product page 
        save for later from recently viewed on category page, search page, home page, men's floor page, product page
    *************/
    
    $(window).on("analytics.saveforlater analytics.CategoryAndSearch_saveforlater analytics.quickviewsaveforlater analytics.quickViewSaveForLater analytics.completethelooksaveforlater analytics.recentlyviewedsaveforlater", function(e){

        var mboxEl = $("<div class='mboxDefault' id='saveForLaterMbox'></div>");
        $("body").append(mboxEl);

        mboxDefine("saveForLaterMbox", "saveForLaterMbox");
        mboxUpdate("saveForLaterMbox", "action=saveForLater");
    });

    
     /*************  
         Listens for:
         add to bag on product page, add to back from saved items page
         add to bag from quickview on category page
         add to bag from quickview on search page
         add to bag from complete the look on product page
     **************/

     $(window).on("analytics.addtobag analytics.quickviewaddtobag quickviewaddtobag analytics.completethelookaddtobag", function(e){

        var mboxEl = $("<div class='mboxDefault' id='addToBagMbox'></div>");
        $("body").append(mboxEl);

        mboxDefine("addToBagMbox", "addToBagMbox");
        mboxUpdate("addToBagMbox", "action=addToBag");
     });
}
});mboxCurrent.loaded();mboxFactories.get('default').get('mBox-Release-SiteWide',0).cancelTimeout();mboxFactories.get('default').get('mBox-Release-SiteWide',0).setOffer(new mboxOfferDefault()).show();