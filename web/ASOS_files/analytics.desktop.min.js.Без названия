(function () {
	
	var isMasterLayout = $('html').hasClass('MasterLayout');
	
	if(isMasterLayout) {
		require(['events'], function(events){
		  events.on('analyticsCreated', function(){
			  //this function waits for the creation of the global Navigation object which is required by all analytics			  
			  
			  /*** Google Analytics, Universal Analytics ***/
			  /* v1.0 2015/08/06 - Update to Universal Analytics */
			  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			  
			  var analytics = analytics || {};
			  analytics.ga = analytics.ga || {};
			  analytics.ga.accountList = {
				gb: 'UA-1005942-1',
				us: 'UA-1005942-15',
				fr: 'UA-1005942-17',
				de: 'UA-1005942-16',
				it: 'UA-1005942-36',
				es: 'UA-1005942-37',
				au: 'UA-1005942-38',
				ru: 'UA-1005942-75'
			  };
			  analytics.ga.accountId = analytics.ga.accountList[Navigation.CountryCode.toLowerCase()];

			  ga('create', analytics.ga.accountId, 'auto');
			  ga('send', 'pageview');
			  /*** End Google Analytics ***/		
		  });
		});
	}else {
		//Non-MasterLayout Pages		
	}
	
})();
